<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOtp">

    <TextView
        android:id="@+id/otpTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="OTP versification" />

    <TextView
        android:id="@+id/textmobileshownumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpTV"
        android:layout_marginTop="10dp"
        android:text="mobile number"
        android:textColor="#7E000000"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/OTP_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textmobileshownumber"
        >

        <EditText
            android:id="@+id/editTextOTP1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextOTP2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextOTP3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextOTP4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextOTP5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextOTP6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ResendOTP_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/OTP_layout"
        />

    <Button
        android:id="@+id/Verify_OTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ResendOTP_TV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Verify OTP" />

    <ProgressBar
        android:id="@+id/progress_sendingOTP"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Verify_OTP"
        />

</RelativeLayout>